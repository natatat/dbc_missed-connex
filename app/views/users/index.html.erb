<% if session[:current_user_id] %>

  <p>hey <%= @user.username %></p>
  <%= button_to "log out", session_path(@user.id), method: :delete %>

<% else %>

  <%= link_to "sign up", new_user_path %><br/><br/>

  <%= form_for @user, url: sessions_path do |f| %>
